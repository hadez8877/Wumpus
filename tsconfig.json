{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@models/*": ["db/models/*"],
      "@errors/*": ["src/plugins/errors/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
