{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "typeRoots": ["./types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@models/*": ["db/models/*"],
      "@errors/*": ["src/plugins/errors/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "db"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "public"]
}
